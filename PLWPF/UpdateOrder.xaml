<Window x:Class="PLWPF.UpdateOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="Order Status Update" Icon="Resources/house.png" Height="161.579" Width="300.69">
    <Grid >
        <Button Name="update" Content="Update" IsEnabled="False" HorizontalAlignment="Left" Margin="181,83,0,0" VerticalAlignment="Top" Width="75" Click="update_Click"/>
        <Button Name="cancel" Content="Cancel" HorizontalAlignment="Left" Margin="40,83,0,0" VerticalAlignment="Top" Width="75"/>
        <CheckBox Content="Check the box if you wish to close this Order" FontSize="12" Margin="14,24,23,0" VerticalAlignment="Top" RenderTransformOrigin="-0.067,0.62" Checked="CheckBox_Checked" Height="29"/>
        <Image Source="Resources/logoOption2.2.png"/>
    </Grid>
</Window>
