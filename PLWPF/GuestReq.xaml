<Page x:Class="PLWPF.GuestReq"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      
      xmlns:local="clr-namespace:PLWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GuestReq">

    <Grid x:Name="addReq">

        <Grid Background="#FFFDF9F9">
            <Grid HorizontalAlignment="Left" Height="378" Margin="72,32,0,0" VerticalAlignment="Top" Width="452" RenderTransformOrigin="0.5,0.5" OpacityMask="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" ShowGridLines="True" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}">
                <TextBox Name="area" Text="area"  HorizontalAlignment="Left" Height="24" Margin="57,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.588,2.479" />
                <GroupBox x:Name="subareabox" FlowDirection="LeftToRight" BorderBrush="Black" BorderThickness="1" Header="Sub area" Margin="252,64,80,269" FontWeight="Bold"/>
                <GroupBox x:Name="areabox" FlowDirection="LeftToRight" BorderBrush="Black" BorderThickness="1" Header="Destination Area" Margin="57,64,275,269" FontWeight="Bold"/>
                <GroupBox x:Name="startdatebox" FlowDirection="LeftToRight" BorderBrush="Black" BorderThickness="1" Header="Check-in date" Margin="57,109,275,224" FontWeight="Bold"/>
                <GroupBox x:Name="enddatebox" FlowDirection="LeftToRight" BorderBrush="Black" BorderThickness="1" Header="Check-out date" Margin="57,152,275,181" FontWeight="Bold"/>
                <GroupBox x:Name="kidsbox" FlowDirection="LeftToRight" BorderBrush="Black" BorderThickness="1" Header="Children" Margin="252,152,80,180" FontWeight="Bold">
                    <TextBox x:Name="Children"   HorizontalAlignment="Left" Height="24" Margin="-6,6,-6,-6" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.588,2.479" />
                </GroupBox>
                <GroupBox x:Name="adultbox" FlowDirection="LeftToRight" BorderBrush="Black" BorderThickness="1" Header="Adults" Margin="252,109,80,224" FontWeight="Bold">
                    <TextBox x:Name="adults"   HorizontalAlignment="Left" Height="24" Margin="0,0,-2,-1" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" RenderTransformOrigin="0.588,2.479" Background="White" />
                </GroupBox>

                <DatePicker x:Name="startday" 
                            SelectedDateChanged="Startday_SelectedDateChanged"
                            Text="Check-in Date" HorizontalAlignment="Left" Margin="57,130,0,224"
                            SelectedDate="{Binding StudentDate, Mode=TwoWay, NotifyOnValidationError=true, 
                    ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" RenderTransformOrigin="0.626,-1.083"/>
                <DatePicker x:Name="endday"
                            SelectedDateChanged="Endday_SelectedDateChanged"
                            Text="Check-out Date" HorizontalAlignment="Left"  
                            SelectedDate="{Binding entryDate, Mode=TwoWay, NotifyOnValidationError=true,
                    ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" Margin="57,173,0,181"/>
                <Label Content="Fill in your request" HorizontalAlignment="Left" Margin="164,29,0,0" VerticalAlignment="Top" Width="190" FontFamily="Verdana Pro Black" FontSize="14" Height="31"/>
                <Label Content="Label" HorizontalAlignment="Left" Margin="57,197,0,0" VerticalAlignment="Top" Width="120" Height="17" FontSize="6"/>
                <CheckBox Content="pet" HorizontalAlignment="Left" Margin="335,211,0,0" VerticalAlignment="Top"/>
                <ComboBox Name="type" HorizontalAlignment="Left" Margin="171,269,0,0" VerticalAlignment="Top" Width="120"/>
                <Button Content="next" HorizontalAlignment="Left" Height="29" Margin="352,312,0,0" VerticalAlignment="Top" Width="68" Background="#FF8D91DE"/>
            </Grid>




        </Grid>




    </Grid>
</Page>
