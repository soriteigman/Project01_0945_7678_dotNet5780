<Window x:Class="PLWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="233.194" Width="381.512">
    <Grid Name="loginGrid">
        <Grid>
            <Image Source="Resources/logoOption2.2.png" />
            <Label Content="Password:" Margin="33,103,262,54" RenderTransformOrigin="0.509,0.154" />
            <PasswordBox x:Name="passwordBox" Background="White" PasswordChar="*" Opacity="0.5" Margin="121,103,32,68" />
            <TextBox x:Name="usernameBox" Background="White" Opacity="0.5" Margin="121,38,32,136" />
            <Label Content="Username:" Margin="33,38,262,122" />
            <Button Name="login" Content="LOGIN" Margin="203,151,114,25" RenderTransformOrigin="0.5,0.5" Click="login_Click"/>
        </Grid>
    </Grid>
</Window>
